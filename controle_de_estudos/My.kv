#: import get_color_from_hex kivy.utils.get_color_from_hex

ScreenManager:
    id: screen_manager
    Screen_Login:
        name: 'login'
    Screen_Forgot_Password:
        name: 'forgot_password'
#
<Screen_Login>:
    name: 'login'
    Background_padrao:
    BoxLayout:
        orientation: "vertical"
        padding: [0, 20, 0, 20]
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        size_hint: 0.8, 0.6
    #
        Image_logo:
            source: ".\Images\CourseMate.png"
        #
        Widget:
            size_hint: 1, 0.4
        #
        Label_login:
            text: "Nome de usu√°rio"
        TextInput_login:
        #
        Label_login:
            text: "Senha"
        TextInput_login:
            password: True
        #
        Widget:
            size_hint: 1, 0.6
        #
        BoxLayout:
            orientation: "horizontal"
            spacing: 20
            padding: 0, 0, 0, 0
        #
            Button_login:
                text: "Criar perfil"
                on_press: self.canvas.before.children[0].rgba = get_color_from_hex('#d68e1c')
                on_release: app.root.current = 'new_user'
                canvas.before:
                    Color:
                        rgba: get_color_from_hex('#f29e23')
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [8]
            #
            Button_login:
                text: "Entrar"
                on_press: self.canvas.before.children[0].rgba = get_color_from_hex('#d68e1c')
                on_release: app.root.current = 'home'
                canvas.before:
                    Color:
                        rgba: get_color_from_hex('#58bceb')
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [8]
        #
        Button:
            text: "esqueceu a senha?"
            color: 1, 1, 1, 1
            background_color: 0, 0, 0, 0
            on_press: app.root.current = 'forgot_password'
#